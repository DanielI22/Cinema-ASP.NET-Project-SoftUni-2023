@model ShowtimeSelectViewModel
@{
    ViewData["Title"] = "Showtimes";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-6">
            <form method="post" asp-route-cinemaId="@Model.CinemaId" asp-action="Select">
                <div class="form-group">
                    <label for="selectedDate">Select Date:</label>
                    <select id="selectedDate" name="selectedDate" class="form-control">
                        @foreach (var date in Model.Dates)
                        {
                            <option value="@date">@date.ToShortDateString()</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<div class="container mt-4">
    @if (Model.SelectedDate != null)
    {
        <h4>Showtimes for @Model.SelectedDate</h4>
    }
        @foreach (var movieShowtime in Model.Movies)
        {
        <div class="row">

            <div class="col-md-6 col-lg-6 mb-4">
                <partial name="_MovieCardPartial" model="@movieShowtime.MovieCard" />
            </div>
                <div class="col-md-6 col-lg-6 mt-2">
                    @foreach (var showtime in movieShowtime.Showtimes)
                    {
                        <div class="showtime-box" data-toggle="tooltip" data-placement="top" title="@showtime.TicketPrice">
                            @showtime.StartTime
                        </div>
                    }
                </div>
        </div>
        }
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>

    <style>
        .showtime-box {
            display: inline-block;
            padding: 5px 10px;
            background-color: #f44336;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
        }

            .showtime-box:hover {
                background-color: #d32f2f;
            }
    </style>
}