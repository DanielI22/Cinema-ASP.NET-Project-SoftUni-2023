@page
@model UserTicketsDataModel
@{
    ViewData["Title"] = "My Tickets";
    ViewData["ActivePage"] = ManageNavPages.UserTickets;
}

<h3>@ViewData["Title"]</h3>

@if (Model.UserTickets.Any())
{
    <table class="table text-muted">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Price</th>
                <th>Cinema</th>
                <th>Seat</th>
                <th>Date</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.UserTickets)
            {
                <tr>
                    <td style="width: 15%;"><img src="@ticket.Movie.PosterUrl" class="card-img" alt="@ticket.Movie.Title"></td>
                    <td>@ticket.TicketPrice lv.</td>
                    <td>@ticket.CinemaName</td>
                    <td>@ticket.SeatNumber</td>
                    <td>@ticket.ShowtimeStartTime.Date.ToShortDateString()</td>
                    <td>@ticket.ShowtimeStartTime.ToString("HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tickets reserved.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
