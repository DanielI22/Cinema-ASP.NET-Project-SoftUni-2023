@model List<GenreViewModel>
@{
    ViewData["Title"] = "Genres";
}
<h1>Genres Dashboard</h1>

<p>
    <a class="btn btn-primary" asp-action="Add">Add New Genre</a>
</p>

<table class="table-responsive text-muted">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
                <td>
                    <a class="btn btn-info w-100" asp-action="Edit" asp-route-id="@genre.Id">Edit</a>
                    <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@genre.Id" onclick="return confirm('Are you sure you want to delete this genre?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>