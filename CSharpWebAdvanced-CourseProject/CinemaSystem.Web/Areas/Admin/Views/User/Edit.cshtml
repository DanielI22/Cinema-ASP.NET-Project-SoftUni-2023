@model UserEditViewModel
@{
    ViewData["Title"] = "Edit User";
}
<h1>Edit User</h1>

<div class="container">
    <form asp-action="Edit">
        <div class="form-group">
            <label class="pt-3">Username</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="pt-3">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="pt-3">Password</label>
            <input id="passwordInput" asp-for="Password" type="password" class="form-control" disabled/>
            <button id="enableChangePassword" type="button" class="btn btn-secondary mt-3 mb-3" style="font-size: 0.8rem">New Password</button>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Is Admin</label>
        </div>
        <button type="submit" class="btn btn-primary mt-3" style="width:100%">Edit</button>
    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#enableChangePassword").click(function () {
                $("#passwordInput").prop("disabled", false);
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}