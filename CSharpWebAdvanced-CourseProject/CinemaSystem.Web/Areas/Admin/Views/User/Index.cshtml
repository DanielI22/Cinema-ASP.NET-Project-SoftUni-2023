@model List<UserViewModel>
@{
    ViewData["Title"] = "Users";
}
<h1>Users Dashboard</h1>

<p>
    <a class="btn btn-primary" asp-action="Add">Add New User</a>
</p>

<table class="table-bordered text-muted">
    <thead>
        <tr>
            <th class="px-2">Username</th>
            <th class="px-2">Email</th>
            <th class="px-2">IsAdmin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="px-2">@user.Username</td>
                <td class="px-2">@user.Email</td>
                <td class="px-2">@user.IsAdmin</td>
                <td class="px-2">
                    <a class="btn btn-info w-100" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Are you sure you want to delete this user?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>