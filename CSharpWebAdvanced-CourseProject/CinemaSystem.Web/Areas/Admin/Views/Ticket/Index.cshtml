@model List<TicketViewModel>
@{
    ViewData["Title"] = "Tickets";
}
<h1>Tickets Dashboard</h1>

<p>
    <a class="btn btn-primary" asp-action="Add">Add New Ticket</a>
</p>

<table class="table-bordered text-muted">
    <thead>
        <tr>
            <th class="px-2">Showtime</th>
            <th class="px-2">Seat Number</th>
            <th class="px-2">Ticket price</th>
            <th class="px-2">User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td class="px-2">@ticket.Showtime</td>
                <td class="px-2">@ticket.SeatNumber</td>
                <td class="px-2">@ticket.Price BGN.</td>
                <td class="px-2">@ticket.Username</td>
                <td class="px-2">
                    <a class="btn btn-info w-100" asp-action="Edit" asp-route-id="@ticket.Id">Edit</a>
                    <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@ticket.Id" onclick="return confirm('Are you sure you want to delete this ticket?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>