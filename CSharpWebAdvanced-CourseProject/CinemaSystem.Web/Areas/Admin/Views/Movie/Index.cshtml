@model List<MovieCardViewModel>
@{
    ViewData["Title"] = "Movies";
}
<h1>Movies Dashboard</h1>

<p class="text-center mb-5">
    <a class="btn btn-primary" asp-action="Add">Add New Movie</a>
</p>

<div class="container">
    <div class="row align-items-end">
@foreach (var movie in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3">
    <partial name="_MovieCardPartial" , model="@movie" />
    <a class="btn btn-info w-100" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
    <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@movie.Id" onclick="return confirm('Are you sure you want to delete this movie?')">
        <button type="submit" class="btn btn-danger  w-100 mt-2 mb-5">Delete</button>
    </form>
    </div>

}
</div>
</div>
