@model CinemaAddEditViewModel
@{
    ViewData["Title"] = "Edit Cinema";
}
<h1>Edit Cinema</h1>

<div class="container">
    <form asp-action="Edit">
        <div class="form-group">
            <label class="pt-3">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="pt-3">ImageUrl</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="pt-3">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3" style="width:100%">Edit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}