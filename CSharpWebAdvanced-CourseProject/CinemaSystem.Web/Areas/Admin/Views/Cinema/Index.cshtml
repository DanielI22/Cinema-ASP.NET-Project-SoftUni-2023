@model List<CinemaViewModel>
@{
    ViewData["Title"] = "Cinemas";
}
<h1>Cinemas Dashboard</h1>

<p>
    <a class="btn btn-primary" asp-action="Add">Add New Cinema</a>
</p>

<table class="table-bordered text-muted">
    <thead>
        <tr>
            <th class="px-2"></th>
            <th class="px-2">Name</th>
            <th class="px-2">Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cinema in Model)
        {
            <tr>
                <td class="px-2"><img src="@cinema.ImageUrl" style="width:8rem"></td>
                <td class="px-2">@cinema.Name</td>
                <td class="px-2">@cinema.Address</td>
                <td class="px-2">
                    <a class="btn btn-info w-100" asp-action="Edit" asp-route-id="@cinema.Id">Edit</a>
                    <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@cinema.Id" onclick="return confirm('Are you sure you want to delete this cinema?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>